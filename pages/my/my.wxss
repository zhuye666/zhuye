.topimg{
    position: relative;
    text-align: center;
  }
  .topimg>image{
    width: 90%;
    height: 250rpx;
    border-radius: 20rpx;
  }
  .topimg .toptitle{
    position: absolute;
    color: white;
    top:40rpx;
    left: 75rpx;
    font-size: 28rpx;
    text-align: left;
  }
  .topimg .toptitle>view{
    font-size: 23rpx;
  }
  .topimg .toptitle>view:first-child{         /* >:直接子主键 */
    font-size: 34rpx;
    font-weight: 900;
    margin-bottom: 20rpx;
  }
  .topimg .toptitle>view:last-child{
    margin-top: 20rpx;
    width: 100rpx;
    height: 45rpx;
    border: 1rpx solid white;
    text-align: center;
    line-height: 45rpx;
    border-radius: 25rpx;
  }
