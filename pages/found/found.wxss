/* 搜索栏 */
.w90{
    width: 90%;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center; 
  }
  .Search{
    display: flex;
    justify-content: center;
    align-items: center; 
    height: 70rpx;
    box-shadow: 2px 2px 2px 1px rgba(139, 139, 139, 0.2);
  }
  .Search .w90>view{
    width: 300rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    padding-left: 10rpx;
    box-shadow: 0px 2px 2px 1px rgba(139, 139, 139, 0.1);
    border-radius: 20rpx;
    margin-left:35rpx;
  }
  .Search .w90>view>image{
    width: 45rpx;
    height: 35rpx;
  }.Search .w90>view>input{
    width: 190px;
    height: 20px;
    font-size: 18rpx;
    padding-left:10rpx;
    border: none; 
  }
  .Search .w90>image{
    width: 50rpx;
    height: 50rpx;
    margin-left:35rpx;
  }
  .Search .w90>text{
    font-size: 33rpx;
    font-weight: 900; margin-right: 20rpx;
}
/* 头部图片 */
.topimg{
  position: relative;
  text-align: center;
  margin-top: 30rpx;
}
.topimg>image{
  width: 90%;
  height: 250rpx;
  border-radius: 20rpx;
}
.topimg .toptitle{
  position: absolute;
  color: white;
  top:40rpx;
  left: 75rpx;
  font-size: 28rpx;
  text-align: left;
}
.topimg .toptitle>view{
  font-size: 23rpx;
}
.topimg .toptitle>view:first-child{         /* >:直接子主键 */
  font-size: 34rpx;
  font-weight: 900;
  margin-bottom: 20rpx;
}
.topimg .toptitle>view:last-child{
    margin-top: 10rpx;
}

.flexbox{
  display: flex;
}

/* 通知公告 */
.new{
  width: 90%;
  margin: auto;
  margin-top: 50rpx;
}
.new .options{
  font-size: 28rpx;
