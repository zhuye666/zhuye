}
.new .options>view{
  margin-left: 30rpx;
}
.new .options>view:first-child{
  margin-left: 0rpx;
  margin-top: -20rpx;
  font-size: 40rpx;
  border-bottom: #b3f2c7 solid 10rpx;
}
