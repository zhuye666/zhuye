/* pages/i/i.wxss */
/* 背景 */
.bg{
    margin-top: -10rpx;
    height: 100rpx;
    background: linear-gradient(to top,#fdfffe,#44d3b2);
  }
  /* 我的 */
  .me{
    width: 90%;
    height: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-left: 40rpx;
    margin-top: 10rpx;
    padding-top: 20rpx;
  }
  .me>image{
    width: 10%;
  }
  .me>view{
    font-size: 25rpx;
    font-weight: 900;
  }
  /* 头像 */
  .my{
    width: 90%;
    height: 50rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 80rpx;
  }
  .my .img{
    width: 70rpx;
    height: 70rpx;
    border: solid red 2rpx;
    border-radius: 50%;
    overflow: hidden;
  }
  .my .img>image{
    width: 70rpx;
    height: 70rpx;
  }
  .my .text{
    margin-left: 50rpx;
  }
  .my .text>view:first-child{
    font-size: 28rpx;
    font-weight: 900;
  }
  .my .text>view:last-child{
    font-size: 20rpx;
    color: #A3A3A3;
    margin: 10rpx 0 5rpx 0;
  }
  /* 办事 */
  .things{
    width: 90%;
    height: 200rpx;
    margin: auto;
    display: flex;
    justify-content: space-between;
    margin-top: 130rpx;
    position: relative;
  }
  .things .left{
    position: relative;
    display: flex;
    width: 48%;
    height: 200rpx;
    top: -100rpx;
    padding-bottom: 95rpx;
    border-radius: 20rpx;
    overflow: hidden;
  }
  .things .left>image:first-child{
    width: 180rpx;
    position: absolute;
    top: 80rpx;
  }
  .things .left .midtitle{
    position: absolute;
    right: 26rpx;
    top: 170rpx;
    color: white;
  }
  .things .left .midtitle>view:first-child{
    font-size: 28rpx;
    margin-bottom: 10rpx;
  }
  .things .left .midtitle>view:last-child{
    font-size: 23rpx;
  }
  .things .right{
    position: relative;
    display: flex;
    width: 48%;
    height: 200rpx;
    border-radius: 20rpx;
    top: -100rpx;
  }
  .things .right>image:first-child{
    position: absolute;
    width: 180rpx;
    height: 150rpx;
    margin-top: 144rpx;
  
  }
  .things .right .midtitle{
    position: absolute;
    right: 25rpx;
    top: 70rpx;
    color: white;
  }
  .things .right .midtitle>view:first-child{
    font-size: 28rpx;
    margin-bottom: 10rpx;
    margin-top: 100rpx;
  }
  .things .right .midtitle>view:last-child{
    font-size: 23rpx;
  }
  
  .flexbox{
    display: flex;
  }
  /* 推荐应用 */
  .app{
    width: 90%;
    margin: auto;
    margin-top: 50rpx;
  }
  .app>view:first-child{
    margin-bottom: 30rpx;
  }
  .app>view:first-child>view:first-child{
    font-size: 40rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
  }
  /* 操作栏 */
  .operate{
    width: 90%;
    height: 390rpx;
    margin-left: 25rpx;
    margin-top: 50rpx;
  }
  .operate>view{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 50rpx;
  }
  .operate>view>view:first-child{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  
  }
  .y{
    background: #ffbf6b;
  }
  .p{
    background: #8867f5;
  }
  .g{
    background: #3ad1ae;
  }
  .operate>view>view:first-child>image{
    width: 40rpx;
    height: 40rpx;
  }
  .operate .texts{
    margin-left: -250rpx;
  }
  .operate .texts>view:first-child{
    margin-bottom: 20rpx;
  }
  .operate .texts>view:last-child{
    font-size: 20rpx;
    color: #A3A3A3;
  }
  .operate view>view:last-child{
    font-size: 20rpx;
    color: #A3A3A3;
  }
  /* 最新上线 */
  .new{
    width: 90%;
    margin: auto;
    margin-top: 10rpx;
  }
  .new .text{
    font-size: 30rpx;
    font-weight: 600;
    margin: 70rpx 0 50rpx 0;
  }
  .new .choices{
    height: 320rpx;
    flex-wrap: wrap;
    justify-content:space-between;
  }
  .new .choices>view{
    text-align: center;
    width: 120rpx;
    height: 120rpx;
    margin:10rpx;
  }
  .new .choices>view>image{
    width: 70rpx;
    height: 70rpx;
  }